  <td rowspan='<%= nz.grouped_items.size+1 %>'><%= link_to '', nz.scan, class: 'icon_24 scan_24' if nz.scan %></td>
  <td rowspan='<%= nz.grouped_items.size+1 %>'><%= date(nz.date) %></td>
  <td rowspan='<%= nz.grouped_items.size+1 %>'><%= nz.contract_num %></td>
  <td rowspan='<%= nz.grouped_items.size+1 %>'><%= nz.code %></td>
  <td rowspan='<%= nz.grouped_items.size+1 %>'><%= nz.destination %></td>
  <td rowspan='<%= nz.grouped_items.size+1 %>' class='caped_width'><%= nz.apk_name %></td>
